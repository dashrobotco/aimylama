{
    "version": 2,
    "builds": [
      { "src": "api/**/*.js", "use": "@vercel/node" },
      { "src": "public/**", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/api/socketio", "dest": "api/socketio.js" },
      { "src": "/api/socketio/(.*)", "dest": "api/socketio.js" },
      { "src": "/api/health", "dest": "api/health.js" },
      { "src": "/(.*)", "dest": "/public/$1" }
    ],
    "functions": {
      "api/**/*.js": {
        "maxDuration": 60
      }
    }
  }